<article>
    <header>
        <h2>
        <a href="#">
            {{ post.title }}</a></h2>
        <p>
            {{ 'post.on'|trans }}<time datetime="{{ post.createAt |
            date('c') }}">{{ post.createAt |date }}</time>
            {{ 'by' | trans }} <a href="#">{{ post.author.name }}</a>
        </p>
    </header>
    <p>{{ post.body | truncate(200) }}
    &#8212;<a href="#">{{ 'read.more' |trans }}</a>
    </p>
</article>